<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardView_point"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="false">
    <RelativeLayout
        android:id="@+id/main_relative"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#fff"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            style="@style/Divider"
            />
        <ImageView
            android:id="@+id/list_imageView"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:padding="0.75dp"/>

        <TextView
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/list_imageView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#0C0202"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/list_description"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_title"
            android:layout_toRightOf="@+id/list_imageView"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/list_price"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@+id/list_description"
            android:layout_toRightOf="@+id/list_imageView"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FF0000"/>

        <TextView
            android:id="@+id/list_color"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_imageView"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/list_brand"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_color"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/list_category"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_price"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@+id/list_color"/>

        <TextView
            android:id="@+id/list_year"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_brand"
            android:layout_below="@+id/list_category"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <View
        style="@style/Divider"
        />
</android.support.v7.widget.CardView>