<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="4dp"
    xmlns:card_view="http://schemas.android.com/tools">
    <RelativeLayout
        android:background="@drawable/my_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/image_view"
            android:layout_width="170dp"
            android:layout_height="120dp" />
        <TextView
            android:id="@+id/txtbrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/image_view" />

        <TextView
            android:id="@+id/txtposton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtrenew"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/image_view" />

        <TextView
            android:id="@+id/txtrenew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtprice"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/image_view" />
        <TextView
            android:id="@+id/txtprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"
            android:layout_alignBottom="@+id/image_view"
            android:layout_toEndOf="@+id/image_view" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="120dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <Button
            android:background="#00FFFFFF"
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/icon_edit_25px"
            android:gravity="center"
            android:text="@string/txtedit"
            android:textAllCaps="false" />
        <Button
            android:text="@string/txtdelete"
            android:background="#00FFFFFF"
            android:id="@+id/btn_delete"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/icon_delete_25px"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="60dp"
            android:layout_toEndOf="@+id/btn_edit" />
        <Button
            android:id="@+id/btn_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:drawableRight="@drawable/icon_share_25px"
            android:background="#00FFFFFF"
            android:textAllCaps="false" />
    </RelativeLayout>
</android.support.v7.widget.CardView>